html
  head
    title Inquire
    style
      include ../public/css/home.css
      include ../public/css/askQuestion.css
  body
    include titleBar
    div(id="container")
      p POST your question
      form(action="/postQuestion" method="POST")
        label Title :
        input(type="text" name="title" placeholder="Enter title ..." required autofocus)
        label Body :
        textarea(name="body", cols="30", rows="10" placeholder="Enter content...")
        label Tags :
        input(type="text" name="tags" placeholder="Enter tags ...")
        div(id="formFooter")
          input(type="submit" name="submit" class="submit-tag")
          a(href="/home" id="cancelButton") Cancel