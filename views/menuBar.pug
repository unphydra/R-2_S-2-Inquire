div(class="menubar")
  -let list = [{tag:"Home",url:'/home'},{tag:"Your Questions",url:'/yourQuestions'},{tag:"Your Answers",url:'/yourAnswers'},{tag:"Your Tags",url:''},{tag:"Your Profile",url:`/viewProfile?id=${userInfo && userInfo.id}`}]
  each item in list
    -const className = (!userInfo && item.tag !== 'Home') ? 'hide' : ''
    div(class=`menu-item ${className}` id=`${item.url}` item.url ? onclick=`window.location.href='${item.url}'` )=item.tag